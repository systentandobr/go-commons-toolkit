# Configurações gerais
APP_NAME="E-commerce Agente Autônomo"
APP_VERSION="1.0.0"
DEBUG=True

# Configurações de API
API_HOST=0.0.0.0
API_PORT=8000

# Configurações do banco de dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce_agent
DB_USER=postgres
DB_PASSWORD=postgres
DB_CONNECTION_STRING=postgresql://postgres:postgres@localhost:5432/ecommerce_agent

# Configurações do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configurações do Serviço WhatsApp
WHATSAPP_API_URL=https://graph.facebook.com
WHATSAPP_API_VERSION=v17.0
WHATSAPP_API_TOKEN=your_whatsapp_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_WEBHOOK_TOKEN=your_webhook_verification_token_here
WHATSAPP_SUPPORTS_CAROUSEL=False

# Configurações do LLM
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-ada-002
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7

# Configurações do Serviço de E-commerce
ECOMMERCE_API_URL=http://localhost:5000/api
ECOMMERCE_API_TOKEN=your_ecommerce_api_token_here
DEFAULT_PRODUCT_IMAGE=https://via.placeholder.com/500?text=Produto

# Configurações de agendamento
EXPIRED_SESSION_CLEANUP_MINUTES=60
SESSION_TIMEOUT_MINUTES=30

# Configurações de métricas
METRICS_EXPORT_INTERVAL_SECONDS=300
